{
  "name": "x402-sales-server",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "test": "bun test tests/",
    "test:integration": "bun test tests/integration/ --timeout 60000",
    "permit2:approve": "bun run tests/integration/scripts/permit2-approve.ts",
    "typecheck": "tsc --noEmit",
    "db:push": "bunx prisma db push",
    "db:generate": "bunx prisma generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "@x402/fetch": "^2.2.0",
    "prisma": "6.19.0",
    "supertest": "^7.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "@x402/core": "^2.2.0",
    "@x402/evm": "^2.2.0",
    "@x402/express": "^2.2.0",
    "bson": "^7.1.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "mongodb": "^7.0.0",
    "viem": "^2.45.1"
  }
}